<div class="caixageral">
    <div class="titulodb">
        <h1>Sua Página de Compras</h1>
        <h2>Bem vindo(a) {{usatual.nome}}</h2>
    </div>
    <div class="caixa1">
        <h1>Configurações do Usuário</h1>
        <a href="/pages/atualizarcad/{{usatual.id}}" class="btn">Editar</a>
        <a href="/pages/apagarcount/{{usatual.id}}">Apagar Sua Conta</a>
    </div>
    <div>
        <h1>Compre Agora</h1>
    </div>
    <div class="caixa2">
        <div id="dados" class="cxp1">
            {{#each produtos}}
            <h5>{{this.nomep}}</h5>
            <h6>{{this.priceu}}</h6>
            <input type="number" id="qtdprod" name="qtd" min="0" value="0" pattern="^[0-9]+">
            {{/each}}
            <input type="button" id="PrepararPedido" value="Fazer Pedido">
            <div>
                {{#each ped}}
                <input type="hidden" value="{{this.npedd}}" id="nped">
                {{/each}}
            </div>
        </div>
        <div class="caixa2ponto2">
            <form action="/pages/dashb" method="POST">
                <input type="hidden" name="id" value="{{usatual.id}}">
                <h1>Pedido Atual</h1>
                <div id="vercompra"></div>
                <div id="mandardadoscompra" class="caxi"></div>
                <div id="valortotal"></div>
                <div id="npededio"></div>
                <input type="submit" value="Confirmar Compra">
            </form>
        </div>
    </div>
    <div>
        <h1>Pedidos Concluídos</h1>
    </div>
    <div class="caixa3">
        <div id="ddpedidos">
            {{#each ped}}
            <h5>{{this.npedd}}</h5>
            <h6>{{this.nomep}}</h6>
            <h4>{{this.vtt_compra}}</h4>
            <h3>{{this.qtdp}}</h3>
            {{/each}}
            <input type="button" id="history" value="Exibir Histórico de compras">
        </div>
        {{#if exibirpedidos}}
        <p>Ainda não há nenhum pensamento cadastrado</p>
        {{/if}}
    </div>
</div>
<script src="../func/calculopedido.js" defer></script>