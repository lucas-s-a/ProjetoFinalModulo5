<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card bg-light p-4">
        <h2 class="text-center mb-4">Cadastro</h2>
        <form action="/cadastro" method="POST">
          <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" name="nome" class="form-control" placeholder="Digite o seu nome" required>
          </div>
          <div class="mb-3">
            <label for="sobrenome" class="form-label">Sobrenome:</label>
            <input type="text" name="sobrenome" class="form-control" placeholder="Digite o seu sobrenome" required>
          </div>
          <div class="mb-3">
            <label for="login" class="form-label">Nome de usuário:</label>
            <input type="text" name="login" class="form-control" placeholder="Digite o seu nome de usuário" required>
          </div>
          <div class="mb-3">
            <label for="senha" class="form-label">Senha:</label>
            <input type="password" name="senha" class="form-control" placeholder="Digite a sua senha" required>
          </div>
          <div class="mb-3">
            <label for="csenha" class="form-label">Confirme sua senha:</label>
            <input type="password" name="csenha" class="form-control" placeholder="Confirme a sua senha" required>
          </div>
          <div class="d-grid gap-2">
            <input type="submit" class="btn btn-primary" value="Cadastrar">
          </div>
          <p class="text-center mt-3">Já tem uma conta? <a href="/login">Faça login</a></p>
        </form>
      </div>
    </div>
  </div>
</div>
